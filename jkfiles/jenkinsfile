def conf
def a
pipeline {
    agent any
    stages {
        stage('设置变量'){
            steps{
                conf = readProperties file:"jkfiles/cfg.properties"
                a = cfg['name']
                echo "${a}"
                echo "${conf.name}"
            }
        }
        stage('代码拉取'){
            steps {
                echo "检查${conf.name}目录是否存在"
            }
        }
        stage('目录检查') {
            steps {
                echo "检查${conf.name}目录是否存在"
            }
        }       
        stage('服务检查') {
            steps {
                echo "检查nginx进程是否存在"
            }
        }
        stage('发布确认') {
            steps {
                echo "检查完成，是否发布?"
            }
        }                   
        stage('代码推送') {
            steps {
                echo "code sync"
            }
        }
    }
}